{% block user_block %}
    {% if app.user %}

        <a href="{{ url('admin_application_user_user_edit', { id: app.user.id }) }}" class="pull-left">
            <i class="fa fa-user fa-fw"></i>
            <span>{{ app.user }}</span>
        </a>

        {% if is_granted('ROLE_PREVIOUS_ADMIN') and sonata_user.impersonating %}
            <a href="{{ url(sonata_user.impersonating.route, sonata_user.impersonating.parameters| merge({'_switch_user': '_exit'})) }}">(exit)</a>
        {% endif %}

        <a class="pull-left" onclick="return confirm('Confirm logout');" href="{{ url('sonata_user_admin_security_logout') }}" title="{{ 'user_block_logout'|trans({}, 'SonataUserBundle') }}">
            <i class="fa fa-sign-out"></i>
        </a>
    {% endif %}
{% endblock %}
