{% block tab_menu_navbar_header %}
    {% if _navbar_title is not empty %}
        <div class="navbar-header col-md-10">
            {{ _navbar_title|raw }}
        </div>
    {% endif %}
{% endblock %}

{% block list_table %}

    <script>
        var serializedData = {{ serializedData|raw }};

        console.log(serializedData);
        var data = [];
    </script>

    {% if admin.datagrid.results|length > 0 %}
        {% for object in admin.datagrid.results %}
                <script>
                    {% set parent = "node_" ~ object.id %}
                    var {{ parent }} = {};
                    {{ parent }}.text = "Main project - " + "{{ object.name }} -"
                    {% if object.client %}
                         + " <b> Client - {{ object.client }} </b>"
                    {% endif %}
                    ;
                    {{ _self.recursiveChildProjects(object, parent) }}
                    data.push({{ parent }});
                </script>
        {% endfor %}
    {% endif %}

    {% macro recursiveChildProjects(object, parent) %}
        {% if object.children is defined and object.children|length %}
            {{ parent }}.nodes = [];
            {% for child in object.children %}
                {% set object_name = "node_" ~ child.id %}

                var {{ object_name }} = {
                text: "Sub project - {{ child.name }}"
                {% if child.client %}
                + " - <b> Client - {{ child.client }} </b>"
                {% endif %}
                };
                {{ _self.recursiveChildProjects(child, object_name) }}
                {{ parent }}.nodes.push({{ object_name }});
            {% endfor %}
        {% endif %}
    {% endmacro %}

